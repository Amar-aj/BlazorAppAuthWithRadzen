@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
<h1 class="text-muted">Render @(OperatingSystem.IsBrowser() ? "Wasm" : "Server")</h1>
Welcome to your new app.
<h3>User Test Page client</h3>
<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <h1>Welcome back, user! @HttpContext.User.Identity?.Name</h1>
        </Authorized>
        <NotAuthorized>
            <p>Please log in to access this content.</p>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>



 server side IsAuthenticated:<div>@HttpContext.User.Identity?.IsAuthenticated</div>
@code
{
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;
}
